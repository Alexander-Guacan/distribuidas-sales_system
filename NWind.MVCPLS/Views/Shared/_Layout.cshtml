<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>

<body>
    @if (!Context.Request.Path.StartsWithSegments("/Account/Login") &&
    !Context.Request.Path.StartsWithSegments("/Account/AccessDenied"))
    {
        <header class="bg-primary text-white p-3">
            <div class="container d-flex justify-content-between">
                <div>
                    <h1>Your App</h1>
                </div>
                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="me-3">Bienvenido, @User.Identity.Name</span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-light" >Cerrar Sesi√≥n</button>
                        </form>
                    }
                </div>
            </div>
        </header>
    }
    <div class="container mt-4">
        @RenderBody()
    </div>
    <footer class="text-center mt-4">
        <p>&copy; 2024 - Your App</p>
    </footer>
</body>

</html>